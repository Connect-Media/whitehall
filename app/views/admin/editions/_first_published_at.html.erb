<% if edition.published_major_version.nil? %>
  <div id="document-origin" style="margin-top: 15px;">

    <div class="well" style="font-size: 13px; margin-bottom: 0">
      <p style="font-weight: bold; margin-bottom: 15px">This document <span style="color: #f47738">*</span></p>
      <label class="radio" for="document_new">
        <input id="document_new" name="origin" type="radio" value="true">
        has never been published before. It is new.
      </label>
      <label class="radio" style="margin-top: 15px" for="document_old">
        <input id="document_old" name="origin" type="radio" value="false">
        has previously been published on another website.
      </label>
      <div style="margin-left: 18px; margin-top: 15px; display: none;" id="first-published-date">
        <% if edition.imported? %>
          <%= form.label :first_published_at, "First published <span style='color: #f47738'>*</span>".html_safe, class: 'required' %>
        <% else %>
          <%= form.label :first_published_at, "Its original publication date was <span style='color: #f47738'>*</span>".html_safe, style: 'font-weight: bold;' %>
        <% end %>
        <%= form.datetime_select :first_published_at, { include_blank: true, start_year: Date.today.year, end_year: 1945, hour: 00, minute: 00 }, { class: 'date' } %>
      </div>
    </div>
  </div>

<% else %>
  <p style="margin-top: 15px; margin-bottom: 15px;">
    First published<br />
    <strong>22:30pm, 13 June 2014</strong> â€” <a href="#">Edit date</a>
  </p>

  <p style="margin-top: 15px; margin-bottom: 15px;">
    First published<br />
    <%= form.datetime_select :first_published_at, { include_blank: true, start_year: 1945, end_year: Date.today.year + 1 }, { class: 'date', style: 'margin-top: 5px' } %>
  </p>
<% end %>
